{
  "name": "cartesi-sqlite-framework",
  "version": "1.0.0",
  "description": "Generalized Cartesi SQLite Framework for Multi-Source Data Ingestion",
  "main": "dist/index.js",
  "dependencies": {
    "@noble/curves": "^1.3.0",
    "@noble/hashes": "^1.3.0",
    "decimal.js": "^10.5.0",
    "ethers": "^6.13.4",
    "openapi-fetch": "^0.7",
    "pino": "^9.0.0",
    "sql.js": "^1.13.0",
    "tweetnacl": "^1.0.3",
    "viem": "^1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@cartesi/cli": "^1.5.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/sql.js": "^1.4.9",
    "@types/ws": "^8.5.13",
    "esbuild": "^0.19",
    "jest": "^29.7.0",
    "npm-run-all": "^4",
    "openapi-typescript": "^6",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10",
    "typescript": "^5",
    "vitest": "^0.34"
  },
  "scripts": {
    "build": "run-s compile compile:lcore compile:rollup-server postbuild",
    "postbuild": "cp node_modules/sql.js/dist/sql-wasm.wasm dist/",
    "codegen": "echo 'Schema already defined in src/schema.d.ts'",
    "compile": "tsc && esbuild ./src/index.ts --bundle --outfile=dist/index.js --platform=node --target=node20",
    "compile:lcore": "esbuild ./src/lcore-main.ts --bundle --outfile=dist/lcore-main.js --platform=node --target=node20",
    "compile:rollup-server": "esbuild ./src/rollup-server.ts --bundle --outfile=dist/rollup-server.js --platform=node --target=node20",
    "start": "ts-node src/index.ts",
    "start:lcore": "ts-node src/lcore-main.ts",
    "start:rollup-server": "ts-node src/rollup-server.ts",
    "start:servers": "node dist/rollup-server.js & sleep 2 && node dist/lcore-main.js",
    "test": "jest --testPathIgnorePatterns='e2e'",
    "test:watch": "jest --watch --testPathIgnorePatterns='e2e'",
    "test:e2e": "jest --testMatch='**/*e2e*.test.ts' --testTimeout=60000 --runInBand",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "demo": "ts-node scripts/demo-full-flow.ts"
  },
  "keywords": [
    "cartesi",
    "sqlite",
    "rollup",
    "blockchain",
    "data-ingestion",
    "framework"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  }
}
