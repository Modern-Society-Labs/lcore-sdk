{
  "name": "@localecore/lcore-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for L{CORE} - Privacy-preserving attestation layer for off-chain data",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "ethers": "^5.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "lcore",
    "attestation",
    "privacy",
    "cartesi",
    "arbitrum",
    "blockchain",
    "iot",
    "zktls"
  ],
  "author": "Modern Society Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Modern-Society-Labs/lcore-sdk.git",
    "directory": "packages/sdk"
  },
  "homepage": "https://github.com/Modern-Society-Labs/lcore-sdk#readme",
  "bugs": {
    "url": "https://github.com/Modern-Society-Labs/lcore-sdk/issues"
  }
}
